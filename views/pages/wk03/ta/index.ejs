<!DOCTYPE html>
<html>
<head>
  <%- include ("../../../partials/head.ejs") %>
  <link rel="stylesheet" type="text/css" href="/stylesheets/store.css" />
  <style>
    td {
      border: solid;
      border-color: white;
      padding: 2px 5px 2px 5px;
      max-width: 300px;
    }
    .product_img{
      max-width: 280px;
    }
    table {
      margin: auto;
    }
    </style>
</head>

<body>
  <%- include ("../../../partials/header.ejs") %>
  <%- include ("../../../partials/nav.ejs") %>
  <main>
    <section>
      <h1><%= title %></h1>
      <input type="text" id="search" name="search" placeholder="Search">
      <button onclick="window.location = `/wk03/ta/${document.getElementById('search').value}`">Search</button>
      <h3><%= items.length %> Results</h3>
      <div class="product-container">
        <% items.forEach(item => { %>
          <button class="product-card">
            <div class="product-img-container">
              <img src="<%= item.imageUrl %>" class="product-img">
            </div>
            <div class="product-header">
              <h4><%= item.name %></h4>
              <h5><%= item.price %></h5>
            </div>
            <p class="product-description"><%= item.description %></p>
          </button>
        <% }) %>
      </div>
    </section>
  </main>
  <%- include ("../../../partials/footer.ejs") %>
</body>
</html>